<odoo>
  <data>
    <record model="ir.ui.view" id="qa_form_customization">
      <field name="name">QA Form customization</field>
      <field name="model">quality.alert</field>
      <field name="inherit_id" ref="quality.quality_alert_view_form"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
      <xpath expr="//field[@name='workcenter_id']" position="after">
        <field name="interpod_related_iso_clause"/>
        <field name="interpod_date_ncr_created"/>
      </xpath>
      <xpath expr="/form[1]/sheet[1]/notebook[1]" position="after">
        <field name="interpod_related_iso_clause"/>
      </xpath>
      <xpath expr="//field[@name='interpod_related_iso_clause'][not(ancestor::field)]" position="replace"/>
      <xpath expr="//field[@name='interpod_date_ncr_created'][not(ancestor::field)]" position="after">
        <field name="interpod_related_iso_clause"/>
      </xpath>
      <xpath expr="//field[@name='product_tmpl_id'][not(ancestor::field)]" position="before">
        <field name="interpod_ncr_title"/>
      </xpath>
      <xpath expr="//field[@name='interpod_ncr_title'][not(ancestor::field)]" position="after">
        <field name="interpod_quality_alert_product_category"/>
      </xpath>
      <xpath expr="//field[@name='interpod_date_ncr_created'][not(ancestor::field)]" position="replace"/>
      <xpath expr="//field[@name='interpod_ncr_title'][not(ancestor::field)]" position="after">
        <field name="interpod_date_ncr_raised"/>
      </xpath>
      <xpath expr="//field[@name='interpod_date_ncr_raised'][not(ancestor::field)]" position="attributes">
        <attribute name="groups"/>
        <attribute name="string">Date Raised</attribute>
      </xpath>
      <xpath expr="//field[@name='team_id'][not(ancestor::field)]" position="attributes">
        <attribute name="groups"/>
        <attribute name="string">Category</attribute>
      </xpath>
      <xpath expr="//field[@name='user_id'][not(ancestor::field)]" position="after">
        <field name="message_partner_ids"/>
      </xpath>
      <xpath expr="//field[@name='message_partner_ids'][not(ancestor::field)]" position="attributes">
        <attribute name="groups"/>
        <attribute name="string">Followers (Team)</attribute>
      </xpath>
      <xpath expr="//field[@name='message_partner_ids'][not(ancestor::field)]" position="attributes">
        <attribute name="groups"/>
        <attribute name="widget">many2many_tags</attribute>
      </xpath>
      <xpath expr="//field[@name='message_partner_ids'][not(ancestor::field)]" position="attributes">
        <attribute name="groups"/>
        <attribute name="readonly">False</attribute>
      </xpath>
      <xpath expr="//field[@name='priority'][not(ancestor::field)]" position="after">
        <field name="interpod_linked_documents"/>
      </xpath>
      <xpath expr="//field[@name='interpod_linked_documents'][not(ancestor::field)]" position="attributes">
        <attribute name="groups"/>
        <attribute name="widget">url</attribute>
      </xpath>
      <xpath expr="//field[@name='interpod_related_iso_clause'][not(ancestor::field)]" position="replace"/>
      <xpath expr="//field[@name='interpod_date_ncr_raised'][not(ancestor::field)]" position="attributes">
        <attribute name="groups"/>
        <attribute name="required">True</attribute>
      </xpath>
      <xpath expr="//field[@name='message_partner_ids'][not(ancestor::field)]" position="attributes">
        <attribute name="groups"/>
        <attribute name="help">Use "add follower" below to add team members</attribute>
      </xpath>
      <xpath expr="//field[@name='message_partner_ids'][not(ancestor::field)]" position="attributes">
        <attribute name="groups"/>
        <attribute name="readonly">True</attribute>
      </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="qa_kanban_customization">
      <field name="name">QA kanban view customization</field>
      <field name="model">quality.alert</field>
      <field name="inherit_id" ref="quality.quality_alert_view_kanban"/>
      <field name="type">kanban</field>
      <field name="arch" type="xml">
      <xpath expr="//kanban[not(ancestor::field)]" position="attributes">
        <attribute name="groups"/>
        <attribute name="quick_create">false</attribute>
      </xpath>
      </field>
    </record>
  </data>
</odoo>
