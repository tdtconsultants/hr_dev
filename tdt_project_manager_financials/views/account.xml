<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_project_manager_form" model="ir.ui.view">
        <field name="name">account.account.project.manager</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form" />
        <field name="arch" type="xml">
            <field name="deprecated" position="after">
                <field name="project_manager_access"/>
            </field>
        </field>
    </record>

    <record id="view_account_move_line_project_manager_tree" model="ir.ui.view">
        <field name="name">account.move.line.project.manager</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree" />
        <field name="arch" type="xml">
            <field name="account_id" position="attributes">
                <attribute name="groups">account.group_account_user,project.group_project_manager</attribute>
            </field>
            <field name="analytic_account_id" position="attributes">
                <attribute name="groups">account.group_account_user,project.group_project_manager</attribute>
            </field>
        </field>
    </record>

    <record id="account.menu_finance" model="ir.ui.menu">
        <field name="groups_id" eval="[(4,ref('project.group_project_manager'))]"/>
    </record>
    <record id="account.menu_finance_entries" model="ir.ui.menu">
        <field name="groups_id" eval="[(4,ref('project.group_project_manager'))]"/>
    </record>
    <record id="account.menu_action_move_journal_line_form" model="ir.ui.menu">
        <field name="groups_id" eval="[(4,ref('project.group_project_manager'))]"/>
    </record>

</odoo>

