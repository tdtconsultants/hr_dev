<odoo>
  <record id="interpod_employee_customisations" model="ir.ui.view">    
    <field ref="hr.view_employee_form" name="inherit_id"/>
    <field name="model">hr.employee</field>
    <field name="name">interpod_employee_customisations</field>
    <field name="type">form</field>
    <field type="xml" name="arch">
      <data>
        <xpath expr="//field[@name='address_home_id']" position="after">
          <field name="personal_phone" groups="hr.group_hr_manager" />
        </xpath>
        <xpath expr="//field[@name='vehicle_distance']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='marital']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
      </data>
    </field>
  </record>
</odoo>

