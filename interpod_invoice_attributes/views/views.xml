<odoo>
  <data>

    <record model="ir.ui.view" id="studio_customization.odoo_studio_account__b8619e51-88c4-4e9b-8d27-590c697ef0a7">
      <field name="name">Odoo Studio: account.invoice.supplier.form customization</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_supplier_form"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='date_due'][not(ancestor::field)]" position="after">
            <field name="interpod_exported"/>
          </xpath>
          <xpath expr="//field[@name='interpod_exported'][not(ancestor::field)]" position="attributes">
            <attribute name="groups">account.group_account_user</attribute>
          </xpath>
          <xpath expr="//field[@name='interpod_exported'][not(ancestor::field)]" position="attributes">
            <attribute name="groups">account.group_account_user,account.group_account_manager</attribute>
          </xpath>
          <xpath expr="//field[@name='date_due'][not(ancestor::field)]" position="after">
            <field name="interpod_planned_payment_date"/>
          </xpath>
      </field>
    </record>
  
    <record model="ir.ui.view" id="studio_customization.odoo_studio_account__ef447b07-08c1-4eb4-bca3-84ccb1cbd59a">
      <field name="name">Odoo Studio: account.invoice.supplier.tree customization</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_supplier_tree"/>
      <field name="type">tree</field>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='residual_signed'][not(ancestor::field)]" position="after">
            <field name="interpod_exported"/>
          </xpath>
          <xpath expr="//field[@name='interpod_exported'][not(ancestor::field)]" position="attributes">
            <attribute name="groups">account.group_account_user</attribute>
          </xpath>
          <xpath expr="//field[@name='interpod_exported'][not(ancestor::field)]" position="attributes">
            <attribute name="groups">account.group_account_user,account.group_account_manager</attribute>
          </xpath>
      </field>
    </record>

  </data>
</odoo>
