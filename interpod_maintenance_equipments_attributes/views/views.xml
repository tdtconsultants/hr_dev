<odoo>
  <data>
    <record model="ir.ui.view" id="interpod_maintenance_equipment">
      <field name="name">interpod_maintenance_equipment</field>
      <field name="model">maintenance.equipment</field>
      <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
      <xpath expr="//field[@name='category_id']" position="after">
        <field name="interpod_asset_number"/>
      </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="interpod_maintenance_equipment_tree">
      <field name="name">interpod_maintencance_equipment_tree</field>
      <field name="model">maintenance.equipment</field>
      <field name="inherit_id" ref="maintenance.hr_equipment_view_kanban"/>
      <field name="type">kanban</field>
      <field name="arch" type="xml">
      <xpath expr="//kanban[1]/templates[1]/t[2]/div[1]/div[2]/div[1]/b[1]/field[@name='name']" position="replace">
        <field name="display_name"/>
      </xpath>
      </field>
    </record>
  </data>
</odoo>
