<odoo>
    <record model="ir.ui.view" id="interpod_mo_customisation">
        <field name="name">interpod_mo_customisation</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="location_id" invisible="1"/>
            </xpath>
            <!--
            <xpath expr="//header/field[@name='state']" position="before">
                <button name="show_qc_survey" type="object" class="oe_highlight" string="QC SURVEY" context="{'mo_id':id}" attrs="{'invisible': [('check_to_done', '=', False)] }" />
            </xpath>
            -->
            <xpath expr="//field[@name='origin']" position="after">
                <field name="survey_answer_id" string="QC Survey answer" readonly="1" />
            </xpath>
        </field>
    </record>
</odoo>
