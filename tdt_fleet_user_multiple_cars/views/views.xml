<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fleet_driver_employee_filter" model="ir.ui.view">
        <field name="name">fleet.driver.employee.filter</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='driver_id']" position="attributes">
                    <attribute name="domain">[('is_employee','=',True)]</attribute>
            </xpath>
        </field>
    </record>

</odoo>

