<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_employee_tree_inherit" model="ir.ui.view">
        <field name="name">employee.checklist.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="check_marked" widget="progressbar"/>
            </field>
        </field>
    </record>

    <record id="view_employee_checklist_inherit" model="ir.ui.view">
        <field name="name">employee.checklist.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Entry Checklist" groups="hr.group_hr_user">
                    <group string="Entry Checklist">
                        <field name="entry_checklist" widget="many2many_checkboxes" nolabel="1"/>
                        <field name="check_marked" widget="percentpie" nolabel="1"/>
                    </group>
                </page>
                <page string="Exit Checklist" groups="hr.group_hr_user">
                    <group string="Exit Checklist">
                        <field name="max_exit_value" invisible="1"/>
                        <field name="exit_checklist" widget="many2many_checkboxes" nolabel="1"/>
                        <field name="check_exit_marked" widget="percentpie" nolabel="1" attrs="{'invisible': [('max_exit_value','=', 0.00)]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="hr_employee_checklist_view_kanban" model="ir.ui.view">
        <field name="name">hr.employee.kanban.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <data>
                <field name="message_needaction_counter" position="after">
                    <field name="check_marked"/>
                    <field name="max_value"/>
                </field>
                <xpath expr="//div[hasclass('o_kanban_button')]" position="inside">

                    <div class="row" t-if="record.check_marked.value &lt; 100">
                        <div class="col-xs-8 o_kanban_primary_bottom pull_left">
                            <field name="check_marked" widget="progressbar" title="Entry Progress" options="{'current_value': 'check_marked', 'max_value': 'max_value', 'editable': false, 'edit_max_value': true}"/>
                        </div>
                    </div>

                </xpath>
            </data>
        </field>
    </record>
    <record id="view_employee_checklist_form" model="ir.ui.view">
        <field name="name">hr.entry.checklist.form</field>
        <field name="model">hr.entry.checklist</field>
        <field name="arch" type="xml">
            <form string="Entry Checklist">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_employee_checklist_tree" model="ir.ui.view">
        <field name="name">hr.entry.checklist.tree</field>
        <field name="model">hr.entry.checklist</field>
        <field name="arch" type="xml">
            <tree string="Entry Checklist">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="open_view_checklist_form" model="ir.actions.act_window">
        <field name="name">Entry Checklist</field>
        <field name="res_model">hr.entry.checklist</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_view_employee_checklist_form"
        action="open_view_checklist_form"
        parent="hr.menu_human_resources_configuration"
        groups="base.group_no_one"
        sequence="1"/>

    <record id="view_employee_exit_checklist_form" model="ir.ui.view">
        <field name="name">hr.employee.exit.checklist.form</field>
        <field name="model">hr.exit.checklist</field>
        <field name="arch" type="xml">
            <form string="Employee Exit Checklist">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <record id="view_employee_exit_checklist_tree" model="ir.ui.view">
        <field name="name">hr.employee.exit.checklist.tree</field>
        <field name="model">hr.exit.checklist</field>
        <field name="arch" type="xml">
            <tree string="Employee Exit Checklist">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="open_exit_checklist_form" model="ir.actions.act_window">
        <field name="name">Exit Checklist</field>
        <field name="res_model">hr.exit.checklist</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_exit_employee_checklist_form"
        action="open_exit_checklist_form"
        parent="hr.menu_human_resources_configuration"
        groups="base.group_no_one"
        sequence="1"/>

</odoo>