<odoo>
    <!-- explicit list view definition -->
    <record model="ir.actions.report" id="interpod_drawdown_views.action_report_drawdown">
      <field name="name">Drawdown Report</field>
      <field name="report_type">qweb-pdf</field>
      <field name="model">purchase.order</field>
      <field name="report_name">interpod_drawdown_views.report_drawdown</field>
      <field name="print_report_name">(object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or 'Purchase Order - %s' % (object.name))</field>
    </record>
    
    <template id="interpod_drawdown_views.report_drawdown">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="interpod_drawdown_views.report_drawdown_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
    </template>

    <template id="interpod_drawdown_views.report_drawdown_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-6">
                            <strong>Shipping address:</strong>
                            <div t-if="o.dest_address_id">
                                <div t-field="o.dest_address_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            </div>
                            <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                                <span t-field="o.picking_type_id.warehouse_id.name"/>
                                <div t-field="o.picking_type_id.warehouse_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            </div>
                        </div>
                        <div class="col-xs-5 col-xs-offset-1">
                            <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                                <p t-if="o.partner_id.vat">ABN: <span t-field="o.partner_id.vat"/></p>
                        </div>
                    </div>
                    <h2 t-if="o.state != 'draft'">Draw Down Confirmation #<span t-field="o.name"/></h2>
                    <h2 t-if="o.state == 'draft'">DRAFT Draw Down #<span t-field="o.name"/></h2>
                    <div class="row mt32 mb32">
                        <div t-if="o.name" class="col-xs-3">
                            <strong>Our Order Reference:</strong>
                            <p t-field="o.name"/>
                        </div>
                        <div t-if="o.partner_ref" class="col-xs-3">
                            <strong>Your Order Reference</strong>
                            <p t-field="o.partner_ref"/>
                        </div>
                        <div t-if="o.date_order" class="col-xs-3">
                            <strong>Order Date:</strong>
                            <p t-field="o.date_order"/>
                        </div>
                    </div>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th><strong>Description</strong></th>
                                <th class="text-center"><strong>Date Req.</strong></th>
                                <th class="text-right"><strong>Qty</strong></th>
                                <th class="text-right"><strong>Unit Price</strong></th>
                                <th class="text-right"><strong>Net Price</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.order_line" t-as="line">
                                <td>
                                    <span t-field="line.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.date_planned"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Total Ex GST</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>GST</td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <p t-field="o.notes"/>
                    <div class="oe_structure"/>
                </div>
            </t>

    </template>
</odoo>
